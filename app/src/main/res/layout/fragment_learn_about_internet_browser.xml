<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".learnAboutInternetBrowser">

    <Button
        android:id="@+id/browserParts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Parts of a Browser"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchEngines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Search Engines"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/browserTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Different Browser Types"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/basic_logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill|center_vertical"
        android:contentDescription="TODO"
        android:src="@drawable/browser_infromation" />

</LinearLayout>