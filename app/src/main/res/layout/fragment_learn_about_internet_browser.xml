<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ce8bfb"
    android:orientation="vertical"
    tools:context=".learnAboutInternetBrowser">

    <Button
        android:id="@+id/browserParts"
        android:layout_width="175dp"
        android:layout_height="58dp"
        android:background="#FF9F39"
        android:text="Parts of a Browser"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchEngines"
        android:layout_width="175dp"
        android:layout_height="58dp"
        android:background="#FF9F39"
        android:text="Search Engines"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/browserTypes"
        android:layout_width="175dp"
        android:layout_height="58dp"
        android:background="#FF9F39"
        android:text="Different Browser Types"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>