<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeButtons"
    android:background="?attr/background"
    android:orientation="vertical">


    <Button
        android:id="@+id/compParts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Computer Information"
        android:background="@drawable/my_button_bg"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/browserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Browser Information"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/onlinesafety"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Online Safety"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/socialMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Social Media"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/quizScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button_bg"
        android:text="Test My Knowledge"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/learning_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/home_screen"
        android:contentDescription="TODO" />


</LinearLayout>